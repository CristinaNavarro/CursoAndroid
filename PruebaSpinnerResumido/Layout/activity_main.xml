<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android7ed.spinner.MainActivity">

    <TextView
        android:id="@+id/tvVacaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvVacaciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <Spinner
        android:id="@+id/vacacionesDestino"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/tvVacaciones"
        />

    <ListView
        android:id="@+id/lvLista"
        android:layout_width="387dp"
        android:layout_height="246dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacacionesDestino"
        app:layout_constraintVertical_bias="0.926"
        tools:layout_editor_absoluteX="-1dp" />


</android.support.constraint.ConstraintLayout>
